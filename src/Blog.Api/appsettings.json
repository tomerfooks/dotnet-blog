{
  "Jwt": {
    "Issuer": "Blog.Api",
    "Audience": "Blog.Client",
    "SigningKey": "PLEASE_CHANGE_THIS_TO_A_LONG_RANDOM_SECRET",
    "AccessTokenMinutes": 30
  },
  "RefreshTokens": {
    "ExpirationDays": 14
  },
  "MySql": {
    "ConnectionString": "server=mysql;port=3306;database=blogdb;user=bloguser;password=blogpass"
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "KeyPrefix": "v1"
  },
  "RateLimit": {
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 0
  },
  "RequestLimits": {
    "MaxRequestBodySizeBytes": 1048576
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
